<!-- Contact Section -->
{{#if contact}}
<section class="contact section-spacing" id="contact">
    <div class="container">
        <div class="section-header">
            <div class="contact-badge">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"></path>
                </svg>
                <span>{{contact.badge}}</span>
            </div>
            <h2 class="section-title">{{contact.title}}</h2>
            <p class="section-description">
                {{contact.description}}
            </p>
        </div>

        <form class="contact-form quick-form" id="contactForm" action="includes/contact-form.php" method="post">
            <div class="form-success hidden" id="formSuccess">
                <div class="form-success-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <polyline points="20,6 9,17 4,12"></polyline>
                    </svg>
                </div>
                <h3 class="form-success-title">{{contact.success.title}}</h3>
                <p class="form-success-description">
                    {{contact.success.description}}
                </p>
            </div>

            <div class="form-content" id="formContent">
                <div class="form-row">
                    <div class="form-group">
                        <input type="text" id="contact-name" name="name" class="form-input" placeholder="{{contact.form.namePlaceholder}} *" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="contact-email" name="email" class="form-input" placeholder="{{contact.form.emailPlaceholder}} *" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <input type="tel" id="contact-phone" name="phone" class="form-input" placeholder="{{contact.form.phonePlaceholder}} *" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="company-name" name="company_name" class="form-input" placeholder="{{contact.form.companyPlaceholder}} *" required>
                    </div>
                </div>

                <div class="form-group">
                    <input type="text" class="form-input" id="message" name="message" placeholder="{{contact.form.messagePlaceholder}} *" required>
                </div>

                <div class="form-submit-wrapper">
                    <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                        <span id="submitText">{{contact.form.submitText}}</span>
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </button>
                    <p class="form-note">{{contact.form.note}}</p>
                </div>
            </div>
        </form>
    </div>
</section>
{{/if}}

