        </div>
    </div>
</section>
{{/if}}

<!-- Get Our Brochure Section -->
{{#if brochure}}
<section class="brochure section-spacing">
    <div class="container">
        <div class="brochure-content">
            <div class="brochure-text">
                <h2 class="brochure-title">{{brochure.title}}</h2>
                <p class="brochure-description">
                    {{brochure.description}}
                </p>
                <div class="brochure-features">
                    {{#each brochure.features}}
                    <div class="brochure-feature">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14,2 14,8 20,8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10,9 9,9 8,9"></polyline>
                        </svg>
                        <span>{{this}}</span>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="brochure-form">
                <form class="brochure-form-content" id="brochureForm" action="includes/brochure-form.php" method="post">
                    <div class="form-group">
                        <input type="text" id="brochure-name" name="name" class="form-input" placeholder="{{brochure.form.namePlaceholder}} *" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="brochure-email" name="email" class="form-input" placeholder="{{brochure.form.emailPlaceholder}} *" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="brochure-company" name="company" class="form-input" placeholder="{{brochure.form.companyPlaceholder}}">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="7,10 12,15 17,10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        {{brochure.form.submitText}}
                    </button>
                    <p class="form-note">{{brochure.form.note}}</p>
                </form>
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Testimonials Section -->
{{#if testimonials}}
<section class="testimonials section-spacing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">{{testimonials.title}}</h2>
            <p class="section-description">
                {{testimonials.description}}
            </p>
        </div>

        <div class="testimonials-grid">
            {{#each testimonials.items}}
            <div class="testimonial-card">
                <div class="testimonial-rating">
                    {{#times 5}}
                    <svg class="star" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    {{/times}}
                </div>
                <p class="testimonial-text">
                    "{{this.quote}}"
                </p>
                <div class="testimonial-author">
                    <div class="testimonial-avatar">
                        <img src="{{this.avatar}}" alt="{{this.name}}">
                    </div>
                    <div class="testimonial-info">
                        <h4 class="testimonial-name">{{this.name}}</h4>
                        <p class="testimonial-company">{{this.company}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Call to Action Banner -->
{{#if cta}}
<section class="cta-banner section-spacing">
    <div class="container">
        <div class="cta-header">
            <h2 class="cta-title">{{cta.title}}</h2>
            <p class="cta-description">
                {{cta.description}}
            </p>
        </div>

        <div class="cta-features">
            {{#each cta.features}}
            <div class="cta-feature">
                <div class="cta-feature-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        {{{this.icon}}}
                    </svg>
                </div>
                <h3 class="cta-feature-title">{{this.title}}</h3>
                <p class="cta-feature-description">{{this.description}}</p>
            </div>
            {{/each}}
        </div>

        <div class="cta-action">
            <button class="btn btn-cta">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
                {{cta.callButton.text}}: {{cta.callButton.phone}}
            </button>
            <p class="cta-note">
                {{cta.note.text}} <a href="{{cta.note.link}}" class="cta-link">{{cta.note.linkText}}</a> {{cta.note.suffix}}
            </p>
        </div>
    </div>
</section>
{{/if}}

