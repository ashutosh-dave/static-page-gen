{{> header}}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-slider">
        {{#each hero.slides}}
        <div class="hero-slide {{#if @first}}active{{/if}}" style="background-image: url('{{this.image}}')">
            <div class="hero-overlay"></div>
        </div>
        {{/each}}

        <button class="hero-slider-btn hero-slider-prev" aria-label="Previous slide">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M15 18l-6-6 6-6"/>
            </svg>
        </button>
        <button class="hero-slider-btn hero-slider-next" aria-label="Next slide">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M9 18l6-6-6-6"/>
            </svg>
        </button>

        <div class="hero-slider-dots">
            {{#each hero.slides}}
            <button class="hero-slider-dot {{#if @first}}active{{/if}}" aria-label="Slide {{add @index 1}}"></button>
            {{/each}}
        </div>
    </div>

    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title" id="hero-title">
                {{hero.title.line1}}
                <span class="hero-title-accent" id="hero-title-accent">{{hero.title.accent}}</span>
            </h1>
            <p class="hero-description" id="hero-description">
                {{hero.description}}
            </p>
            <div class="hero-buttons">
                <a href="{{hero.primaryButton.href}}" class="btn btn-primary btn-lg" id="hero-btn-primary">{{hero.primaryButton.text}}</a>
                <a href="{{hero.secondaryButton.href}}" class="btn btn-outline btn-lg" id="hero-btn-secondary">{{hero.secondaryButton.text}}</a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
{{#if stats}}
<section class="stats section-spacing">
    <div class="container">
        <div class="stats-grid">
            {{#each stats}}
            <div class="stat-item">
                <span class="stat-number">{{this.number}}</span>
                <span class="stat-label">{{this.label}}</span>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Gallery Section -->
{{#if gallery}}
<section class="gallery section-spacing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">{{gallery.title}}</h2>
            <p class="section-description">
                {{gallery.description}}
            </p>
        </div>

        <div class="gallery-grid">
            <div class="gallery-main">
                <div class="gallery-main-image">
                    <img id="mainGalleryImage" src="{{gallery.mainImage.src}}" alt="{{gallery.mainImage.alt}}">
                    <div class="gallery-image-overlay"></div>
                    <div class="gallery-image-info">
                        <h3 id="mainGalleryTitle">{{gallery.mainImage.title}}</h3>
                        <p id="mainGalleryDescription">{{gallery.mainImage.description}}</p>
                    </div>
                </div>
            </div>

            <div class="gallery-thumbnails">
                {{#each gallery.thumbnails}}
                <button class="gallery-thumbnail {{#if @first}}active{{/if}}" data-title="{{this.title}}" data-description="{{this.description}}">
                    <img src="{{this.image}}" alt="{{this.alt}}">
                    <div class="gallery-thumbnail-overlay"></div>
                </button>
                {{/each}}
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Why Choose Section -->
{{#if whyChoose}}
<section class="why-choose section-spacing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">{{whyChoose.title}}</h2>
            <p class="section-description">
                {{whyChoose.description}}
            </p>
        </div>

        <div class="features-grid">
            {{#each whyChoose.features}}
            <div class="feature-card">
                <div class="feature-icon">
                    <div class="feature-icon-inner feature-icon-{{add @index 1}}"></div>
                </div>
                <h3 class="feature-title">{{this.title}}</h3>
                <p class="feature-description">
